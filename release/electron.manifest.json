{
    "executable": "YourBlazorApp",
    "splashscreen": {
      "imageFile": ""
    },
    "singleInstance": false,
    "build": {
      "appId": "com.YourCompany.YourAppName",
      "productName": "Your App Name",
      "copyright": "Copyright Â© 2023",
      "buildVersion": "1.0.0",
      "compression": "maximum",
      "directories": {
        "output": "../../../bin/Desktop"
      },
      "extraResources": [
        {
          "from": "./bin",
          "to": "bin",
          "filter": ["**/*"]
        }
      ],
      "files": [
        {
          "from": "./ElectronHostHook/node_modules",
          "to": "ElectronHostHook/node_modules",
          "filter": ["**/*"]
        },
        "**/*"
      ]
    }
  }